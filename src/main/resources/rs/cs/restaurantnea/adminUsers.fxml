<AnchorPane prefHeight="530.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rs.cs.restaurantnea.adminArea.userController">
    <Button disable="true" layoutX="1.0" layoutY="41.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="213.0" text="Users" textAlignment="CENTER" />
    <Button layoutX="215.0" layoutY="41.0" mnemonicParsing="false" onAction="#toBookings" prefHeight="25.0" prefWidth="212.0" text="Bookings" textAlignment="CENTER" />
    <Button layoutX="427.0" layoutY="41.0" mnemonicParsing="false" onAction="#toEmails" prefHeight="25.0" prefWidth="212.0" text="Emails" textAlignment="CENTER" />
    <Button layoutX="639.0" layoutY="41.0" mnemonicParsing="false" onAction="#signOut" prefHeight="25.0" prefWidth="212.0" text="Sign Out" textAlignment="CENTER" />
    <Label alignment="CENTER" layoutX="390.0" layoutY="74.0" text="Users" underline="true">
        <font>
            <Font name="System Bold" size="25.0" />
        </font>
    </Label>
    <TabPane layoutX="1.0" layoutY="130.0" prefHeight="400.0" prefWidth="850.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
         <Tab text="Make Users">
           <content>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
           </content>
         </Tab>
            <Tab text="View Users">
                <content>
                    <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
                                <children>
                                    <Label text="View Users" textAlignment="CENTER" underline="true">
                                        <font>
                                            <Font name="System Bold" size="25.0" />
                                        </font>
                                    </Label>
                                </children>
                            </HBox>
                            <HBox alignment="CENTER" prefHeight="96.0" prefWidth="600.0" spacing="15.0">
                                <children>
                                    <Label text="Search:" />
                                    <TextField fx:id="searchInput" promptText="Search" />
                                    <Button mnemonicParsing="false" onAction="#updateViewableUsers" text="Update Table" />
                                </children>
                            </HBox>
                            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                                <children>
                                    <Label text="Filter:" />
                                    <ChoiceBox fx:id="filterInput" prefWidth="150.0">
                                        <HBox.margin>
                                            <Insets right="10.0" />
                                        </HBox.margin>
                                    </ChoiceBox>
                                    <Label text="Sort Search By:" />
                                    <ChoiceBox fx:id="sortByInput" prefWidth="150.0" />
                                </children></HBox>
                            <HBox prefHeight="284.0" prefWidth="600.0">
                                <children>
                                    <TableView fx:id="tableOutput" prefHeight="236.0" prefWidth="853.0">
                                        <columns>
                                 <TableColumn fx:id="userIDCol" text="User ID" />
                                            <TableColumn fx:id="fNameCol" prefWidth="140.0" text="First Name" />
                                            <TableColumn fx:id="lNameCol" prefWidth="140.0" text="Last Name" />
                                            <TableColumn fx:id="emailCol" prefWidth="160.0" text="Email Address" />
                                            <TableColumn fx:id="accountTypeCol" prefWidth="100.0" text="Account Type" />
                                            <TableColumn fx:id="promoEmailsCol" prefWidth="110.0" text="Promo Emails" />
                                 <TableColumn fx:id="memberPointsCol" prefWidth="110.0" text="Member Points" />
                                        </columns>
                                    </TableView>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                </content></Tab>
            <Tab text="Edit Users">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                            <VBox prefHeight="371.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <children>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                        <children>
                                            <Label text="Edit Users" textAlignment="CENTER" underline="true">
                                                <font>
                                                    <Font name="System Bold" size="25.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                        <children>
                                            <Label contentDisplay="CENTER" prefHeight="34.0" prefWidth="148.0" text="Enter the user ID of the user you want to edit:" wrapText="true" />
                                            <TextField fx:id="userIDInput" promptText="User ID" />
                                            <Button fx:id="findButton" mnemonicParsing="false" onAction="#findUser" text="Find Users" />
                                        </children>
                                        <padding>
                                            <Insets left="25.0" />
                                        </padding>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                        <padding>
                                            <Insets left="25.0" />
                                        </padding>
                                        <children>
                                            <Label text="First Name:" />
                                            <TextField fx:id="fNameInput" promptText="First Name" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                        <padding>
                                            <Insets left="25.0" />
                                        </padding>
                                        <children>
                                            <Label text="Last Name:" />
                                 <TextField fx:id="lNameInput" promptText="Last Name" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="210.0" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                        <padding>
                                            <Insets left="25.0" />
                                        </padding>
                                        <children>
                                            <Label text="Email Address:" />
                                 <TextField fx:id="emailAddressOutput" editable="false" promptText="Email Adress" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="232.0" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                        <padding>
                                            <Insets left="25.0" />
                                        </padding>
                                        <children>
                                            <Label text="Account Type:" />
                                            <ChoiceBox fx:id="accountTypeInput" prefWidth="150.0" />
                                        </children>
                                    </HBox>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="35.0">
                              <children>
                                 <Label text="Promo Emails:" />
                                 <ChoiceBox fx:id="promoEmailsInput" prefWidth="150.0" />
                              </children>
                              <padding>
                                 <Insets left="25.0" />
                              </padding>
                           </HBox>
                           <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="287.0" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                              <children>
                                 <Label text="Member Points:" />
                                 <TextField fx:id="memberPointsInput" promptText="Member Points" />
                              </children>
                              <padding>
                                 <Insets left="25.0" />
                              </padding>
                           </HBox>
                                    <HBox alignment="CENTER" layoutX="10.0" layoutY="320.0" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                                        <padding>
                                            <Insets left="225.0" />
                                        </padding>
                                        <children>
                                            <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#updateUser" text="Save Changes">
                                                <HBox.margin>
                                                    <Insets right="115.0" />
                                                </HBox.margin>
                                            </Button>
                                            <Button fx:id="delButton" disable="true" mnemonicParsing="false" onAction="#deleteUser " text="Delete User">
                                                <HBox.margin>
                                                    <Insets right="10.0" />
                                                </HBox.margin>
                                            </Button>
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</AnchorPane>
